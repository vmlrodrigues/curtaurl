FROM --platform=$TARGETARCH alpine AS builder-amd64
COPY ./actix/target/x86_64-unknown-linux-musl/release/curta-url /curta-url

FROM --platform=$TARGETARCH alpine AS builder-arm64
COPY ./actix/target/aarch64-unknown-linux-musl/release/curta-url /curta-url

FROM --platform=$TARGETARCH alpine AS builder-arm
COPY ./actix/target/armv7-unknown-linux-musleabihf/release/curta-url /curta-url

ARG TARGETARCH
FROM builder-$TARGETARCH
RUN apk add --no-cache tzdata
COPY ./resources /resources

ENTRYPOINT ["/curta-url"]
